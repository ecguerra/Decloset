<div class="top-container">
    <h1><%=clothing[0].style%></h1>

</div>

<div class="mid-container">
    <div class="detail-container">
        <% if(clothing[0].categoryId) {%>
            <p>Clothing Type: <%=clothing[0].category.name%></p>
        <% } %>
        <p>Status: <%=clothing[0].status%></p>
        <p>Condition: <%=clothing[0].condition%></p>
    </div>
    <div class="detail-container">
        <p>Color: <%=clothing[0].color%></p>
        <p>Brand: <%=clothing[0].brand%></p>
        <p>Material: <%=clothing[0].material%></p>
        <% if(clothing[0].shelterId) { %>
            <p>Donated to: <%=clothing[0].shelter.name %></p>
        <% } %>
    </div>
</div>

<div class="selection-container">
    <a class="button" href="/clothing/edit/<%=clothing[0].id%>">Edit Details</a>
    
    <form action="/clothing/<%=clothing[0].id%>/?_method=DELETE" method="POST">
        <input type="hidden" name="id" value="<%=clothing[0].id%>">
        <input class="delete" type="submit" value="Delete?">
    </form>
</div>

<div class="bottom-container">
    <form class="donation-form" action="/clothing/<%= clothing[0].id %>" method="POST">
        <input type="hidden" name="clothingId" value="<%= clothing[0].id %>">
        <label for="shelterId">Choose a Shelter</label>
        <select name="shelterId" id="shelterId" required>
        <% user.shelters.forEach(shelter => { %>
            <option value="<%=shelter.id%>"><%= shelter.name %></option>
        <% }) %>
        </select>
        <input class="button" type="submit" value="Donate this item">
    </form>
</div>