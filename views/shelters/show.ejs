<h1>Shelter Detail</h1>

<h2>
    <%=shelter[0].name%>
</h2>

<p><%=shelter[0].street%></p>
<p><%=shelter[0].city%></p>
<p><%=shelter[0].state%></p>
<p><%=shelter[0].zip%></p>
<p><%=shelter[0].phone%></p>

<form action="/shelters" method="POST">
    <input type="text" name="name" value="<%=shelter[0].name%>">
    <input type="text" name="detail" value="<%=shelter[0].detail%>">
    <input type="text" name="phone" value="<%=shelter[0].phone%>">
    <input type="text" name="address" value="<%=shelter[0].street%>">
    <input type="text" name="address_city" value="<%=shelter[0].city%>">
    <input type="text" name="address_state" value="<%=shelter[0].state%>">
    <input type="text" name="address_zip" value="<%=shelter[0].zip%>">
    <input type="submit" value="Add to Saved Shelters">
</form>

